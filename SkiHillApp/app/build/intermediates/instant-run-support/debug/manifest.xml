<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lee.skihillapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.lee.skihillapp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.lee.skihillapp.SkihillActivity"
            android:label="@string/title_activity_skihill"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.lee.skihillapp.HotelActivity"
            android:label="@string/title_activity_hotel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.lee.skihillapp.LocationActivity"
            android:label="@string/title_activity_location"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.lee.skihillapp.LiftActivity"
            android:label="@string/title_activity_lift"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.lee.skihillapp.OverviewActivity"
            android:label="@string/title_activity_overview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.lee.skihillapp.RouteMakingActivity"
            android:label="@string/title_activity_route_making"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>