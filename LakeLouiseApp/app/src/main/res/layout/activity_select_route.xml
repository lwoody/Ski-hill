                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkBox2"
                        android:layout_marginBottom="68dp"
                        android:layout_marginLeft="54dp"
                        android:layout_marginStart="54dp"
                        android:button="@drawable/xml_button"
                        android:layout_alignBottom="@+id/checkBox1"
                        android:layout_toRightOf="@+id/checkBox1"
                        android:layout_toEndOf="@+id/checkBox1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/part1"
                    android:id="@+id/part2"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/part2_1">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkBox6"
                            android:button="@drawable/xml_button"
                            android:layout_marginRight="134dp"
                            android:layout_marginEnd="134dp"
                            android:layout_marginTop="18dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/part2_2"
                        android:id="@+id/part2_3">

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/part2_2"
                        android:layout_height="110dp"
                        android:layout_below="@+id/part2_1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkBox4"
                            android:button="@drawable/xml_button"
                            android:layout_marginRight="68dp"
                            android:layout_marginEnd="68dp"
                            android:layout_above="@+id/checkBox5"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
