<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_route"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lee.lakelouiseapp.SelectRouteActivity">

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:id="@+id/button3"
        android:layout_below="@+id/route"
        android:layout_height="wrap_content"
        android:background="#4259f4"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:onClick="onClickSubmit" />

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/route"
        android:layout_below="@+id/textView4"
        android:scrollbarStyle="outsideOverlay"
        android:layout_marginBottom="10dp"
        android:layout_height="500dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/glacier_route">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox2"
                android:layout_marginBottom="69dp"
                android:layout_marginLeft="87dp"
                android:layout_marginStart="87dp"
                android:layout_alignBottom="@+id/checkBox"
                android:layout_alignLeft="@+id/checkBox"
                android:layout_alignStart="@+id/checkBox" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:id="@+id/checkBox5"
                android:layout_below="@+id/checkBox4"
                android:layout_alignLeft="@+id/checkBox"
                android:layout_alignStart="@+id/checkBox"
                android:layout_marginTop="56dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="96dp"
                android:id="@+id/checkBox8"
                android:layout_below="@+id/checkBox7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="229dp"
                android:id="@+id/checkBox"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/checkBox8"
                android:layout_alignStart="@+id/checkBox8"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox3"
                android:layout_marginTop="30dp"
                android:layout_alignTop="@+id/checkBox2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="36dp"
                android:layout_marginEnd="36dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox7"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_alignTop="@+id/checkBox5"
                android:layout_alignLeft="@+id/checkBox3"
                android:layout_alignStart="@+id/checkBox3" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox9"
                android:layout_marginTop="80dp"
                android:layout_below="@+id/checkBox8"
                android:layout_alignLeft="@+id/checkBox2"
                android:layout_alignStart="@+id/checkBox2"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox10"
                android:layout_below="@+id/checkBox8"
                android:layout_alignLeft="@+id/checkBox6"
                android:layout_alignStart="@+id/checkBox6"
                android:layout_marginTop="36dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox4"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_below="@+id/checkBox2"
                android:layout_toRightOf="@+id/checkBox9"
                android:layout_toEndOf="@+id/checkBox9" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox6"
                android:layout_above="@+id/checkBox7"
                android:layout_toLeftOf="@+id/checkBox7"
                android:layout_toStartOf="@+id/checkBox7" />
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:layout_width="60dp"
        android:id="@+id/textView11"
        android:background="#4259f4"
        android:layout_height="5dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:text="Check Point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:fontFamily="sans-serif-condensed"
        android:textSize="25sp"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/textView11"
        android:textColor="#4259f4" />

    <TextView
        android:text="Curve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#175C3A"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="#633e19"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

</RelativeLayout>
