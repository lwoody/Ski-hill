<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_lift"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lee.lakelouiseapp.SelectLiftActivity">

    <ImageView
        app:srcCompat="@drawable/lakelouise_overview"
        android:id="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="220dp" />


    <LinearLayout
        android:id="@+id/colorInfo"
        android:layout_below="@+id/imageView3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_marginBottom="20sp"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="10sp">

        <TextView
            android:text="Beginner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@android:color/holo_green_dark"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:text="Intermediate"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:text="Advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@android:color/holo_red_dark"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:text="Expert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView43"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@android:color/black"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:gravity="center_horizontal"
            android:layout_weight="1" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_below="@+id/border"
        android:gravity="center_horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/glacier"
                android:clickable="true"
                android:onClick="onClickGlacier">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="100dp"
                    android:clickable="false"
                    android:layout_width="330dp">

                    <TextView
                        android:text="Glacier Express"
                        android:layout_width="match_parent"
                        android:id="@+id/textView22"
                        android:layout_height="40sp"
                        android:textAlignment="textStart"
                        android:textSize="30sp"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="sans-serif-condensed" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10sp"
                        android:id="@+id/routeColor2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView29"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_green_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView28"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView27"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_red_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/textView30"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/grizzly">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="100dp"
                    android:clickable="false"
                    android:layout_width="330dp">

                    <TextView
                        android:text="Grizzly Express"
                        android:layout_width="match_parent"
                        android:id="@+id/textView35"
                        android:layout_height="40sp"
                        android:textAlignment="textStart"
                        android:textSize="30sp"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="sans-serif-condensed" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10sp"
                        android:id="@+id/routeColor4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/textView37"
                            android:background="@android:color/holo_green_dark"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView36"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView25"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_red_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView46"
                            android:layout_weight="1"
                            android:background="@android:color/black"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/world">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="100dp"
                    android:layout_width="330dp">

                    <TextView
                        android:text="Top of the World"
                        android:layout_width="match_parent"
                        android:id="@+id/textView21"
                        android:layout_height="40sp"
                        android:textAlignment="textStart"
                        android:textSize="30sp"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="sans-serif-condensed" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10sp"
                        android:id="@+id/routeColor">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView23"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_green_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView49"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView50"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_red_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/textView26"
                            android:background="@android:color/black"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp" />
                    </LinearLayout>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ptarmigan">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="100dp"
                    android:layout_width="330dp">

                    <TextView
                        android:text="Ptarmigan Express"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/textView56"
                        android:textSize="30sp"
                        android:fontFamily="sans-serif-condensed"
                        android:clickable="true" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView60"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_green_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView59"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView58"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_red_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView57"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/black" />
                    </LinearLayout>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/larch">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="100dp"
                    android:layout_width="330dp">

                    <TextView
                        android:text="Larch Express"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/textView51"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="30sp"
                        android:clickable="true" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView55"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_green_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView54"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView53"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_red_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView52"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/black" />
                    </LinearLayout>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/paradise">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="100dp"
                    android:clickable="false"
                    android:layout_width="330dp">

                    <TextView
                        android:text="Paradise"
                        android:layout_width="match_parent"
                        android:id="@+id/textView31"
                        android:layout_height="40sp"
                        android:textAlignment="textStart"
                        android:textSize="30sp"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="sans-serif-condensed" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10sp"
                        android:id="@+id/routeColor3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView33"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_green_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView44"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView32"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_red_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView45"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/black" />
                    </LinearLayout>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/summit">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="100dp"
                    android:clickable="false"
                    android:layout_width="330dp">

                    <TextView
                        android:text="Summit Platter"
                        android:layout_width="match_parent"
                        android:id="@+id/textView39"
                        android:layout_height="40sp"
                        android:textAlignment="textStart"
                        android:textSize="30sp"
                        android:fontFamily="sans-serif-condensed" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10sp"
                        android:id="@+id/routeColor5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView40"
                            android:layout_weight="1"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView24"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:background="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/textView41"
                            android:background="?attr/colorButtonNormal"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:backgroundTint="@android:color/holo_red_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView47"
                            android:textSize="10sp"
                            android:layout_weight="1"
                            android:background="@android:color/black" />
                    </LinearLayout>

                </LinearLayout>

            </TableRow>

        </TableLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/border"
        android:background="#4259f4"
        android:layout_height="5dp"
        android:layout_below="@+id/colorInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
