                </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top_of_the_world"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:text="Top of the World"
                            android:layout_height="wrap_content"
                            android:id="@+id/top_of_the_world_button"
                            android:layout_weight="1"
                            android:textSize="22sp"
                            android:layout_width="170dp" />

                        <TextView
                            android:text="OPEN"
                            android:layout_height="wrap_content"
                            android:id="@+id/top_of_the_world_status"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="24sp"
                            android:layout_width="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView23"
                            android:layout_weight="1"
                            android:background="@android:color/holo_green_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView24"
                            android:layout_weight="1"
                            android:background="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView25"
                            android:layout_weight="1"
                            android:background="@android:color/holo_orange_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView26"
                            android:layout_weight="1"
                            android:background="@android:color/holo_red_dark" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ptarmigan"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:text="Ptarmigan"
                            android:layout_height="wrap_content"
                            android:id="@+id/ptarmigan_button"
                            android:layout_weight="1"
                            android:textSize="22sp"
                            android:layout_width="170dp" />

                        <TextView
                            android:text="OPEN"
                            android:layout_height="wrap_content"
                            android:id="@+id/ptarmigan_status"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="24sp"
                            android:layout_width="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView27"
                            android:layout_weight="1"
                            android:background="@android:color/holo_green_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView28"
                            android:layout_weight="1"
                            android:background="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView29"
                            android:layout_weight="1"
