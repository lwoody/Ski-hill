                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView30"
                            android:layout_weight="1"
                            android:background="@android:color/holo_red_dark" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/larch_express"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:text="Larch Express"
                            android:layout_height="wrap_content"
                            android:id="@+id/larch_button"
                            android:layout_weight="1"
                            android:textSize="22sp"
                            android:layout_width="170dp" />

                        <TextView
                            android:text="OPEN"
                            android:layout_height="wrap_content"
                            android:id="@+id/larch_status"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="24sp"
                            android:layout_width="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView31"
                            android:layout_weight="1"
                            android:background="@android:color/holo_green_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView32"
                            android:layout_weight="1"
                            android:background="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView33"
                            android:layout_weight="1"
                            android:background="@android:color/holo_orange_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView34"
                            android:layout_weight="1"
                            android:background="@android:color/holo_red_dark" />
                    </LinearLayout>
                    s
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/paradise"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:text="Paradise"
                            android:layout_height="wrap_content"
                            android:id="@+id/paradise_button"
                            android:layout_weight="1"
                            android:textSize="22sp"
                            android:layout_width="170dp" />

                        <TextView
                            android:text="OPEN"
                            android:layout_height="wrap_content"
                            android:id="@+id/paradise_status"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="24sp"
                            android:layout_width="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView35"
                            android:layout_weight="1"
                            android:background="@android:color/holo_green_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView36"
                            android:layout_weight="1"
                            android:background="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView37"
                            android:layout_weight="1"
                            android:background="@android:color/holo_orange_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView38"
                            android:layout_weight="1"
                            android:background="@android:color/holo_red_dark" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/summit_platter"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:text="Summit Platter"
                            android:layout_height="wrap_content"
                            android:id="@+id/summit_button"
                            android:layout_weight="1"
