<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_make_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lee.lakelouiseapp.MakeReviewActivity">

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/route_selected"
        android:id="@+id/imageView"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_height="5sp"
        android:id="@+id/textView68"
        android:background="#4259f4"
        android:layout_width="10sp"
        android:layout_below="@+id/textView67"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView67"
        android:layout_alignEnd="@+id/textView67" />

    <TextView
        android:layout_height="5sp"
        android:id="@+id/textView71"
        android:background="#4259f4"
        android:layout_width="10sp"
        android:layout_below="@+id/textView70"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView70"
        android:layout_alignEnd="@+id/textView70" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp">

        <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:layout_weight="1"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:background="#4259f4"
            android:layout_marginRight="5sp"
            android:layout_marginTop="7sp"
            android:onClick="onClickCancel" />

        <Button
            android:text="save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:background="#4259f4"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="7sp"
            android:textSize="14sp"
            android:onClick="onClickSave" />
    </LinearLayout>

    <TextView
        android:text="rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView67"
        android:textAllCaps="true"
        android:textColor="#4259f4"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="REVIEW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView70"
        android:layout_marginTop="38dp"
        android:textColor="#4259f4"
        android:textSize="24sp"
        android:layout_below="@+id/ratingBar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/editText2"
        android:layout_height="100sp"
        android:hint="WRITE IN HERE"
        android:textAllCaps="false"
        android:layout_below="@+id/textView71"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="12m 34s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView63"
        android:textSize="35sp"
        android:layout_marginTop="74dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
