<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_make_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lee.lakelouiseapp.MakeReviewActivity"
    android:background="@android:color/background_light">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <!--<TextView-->
            <!--android:text="Route"-->
            <!--android:layout_width="match_parent"-->
            <!--android:id="@+id/textView82"-->
            <!--android:textAllCaps="true"-->
            <!--android:textColor="#4259f4"-->
            <!--android:layout_below="@+id/imageView"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:textAlignment="center"-->
            <!--android:gravity="center"-->
            <!--android:layout_height="30dp"-->
            <!--android:textSize="25dp" />-->

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:id="@+id/textView83"-->
            <!--android:background="#4259f4"-->
            <!--android:layout_marginBottom="10dp" />-->

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/route_selected"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="120dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="30dp"
            android:fontFamily="monospace"
            android:text="10m 10s"
            android:textColor="@color/bb_darkBackgroundColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/textView86"
            android:background="@color/common_action_bar_splitter"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="review"
            android:layout_width="match_parent"
            android:id="@+id/textView70"
            android:textColor="#4259f4"
            android:layout_below="@+id/reviewRatingBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAllCaps="true"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_height="30dp"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:paddingLeft="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/textView85"
            android:background="#4259f4"
            android:layout_marginBottom="0dp" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_marginTop="8dp"
            android:id="@+id/reviewText"
            android:hint="write here"
            android:textAllCaps="false"
            android:layout_below="@+id/textView71"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:layout_height="80dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:text="rating"
            android:layout_width="match_parent"
            android:id="@+id/textView67"
            android:textAllCaps="true"
            android:textColor="#4259f4"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:layout_weight="0.11"
            android:layout_height="30dp"
            android:textSize="25dp"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:paddingLeft="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/textView84"
            android:background="#4259f4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rating">

            <RatingBar
                android:id="@+id/reviewRatingBar"
                android:gravity="center_vertical"
                android:numStars="5"
                android:stepSize="0.5"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="240dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/textView11"
            android:background="#4259f4" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:background="@drawable/round_shape"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:onClick="saveButton"
            android:text="Done"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>


</RelativeLayout>
